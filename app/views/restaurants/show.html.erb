<h1> <%= @restaurant.name %>  </h1>

<h2>Address: <%= @restaurant.address%> </h2>
<h2>Category: <%= @restaurant.category %>  </h2>
<h2>Phone Number: <%= @restaurant.phone_number %>   </h2>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= review.rating %>  </li>
  <% end %>
</ul>

<%= link_to 'Back', restaurants_path %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
<%= link_to 'Add a new review', new_restaurant_review_path(@restaurant) %>


